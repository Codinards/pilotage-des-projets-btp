        <style>

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
              text-align: center;
            }

            .table th, .table td {
                padding: 0.125rem;
            }
         
            .nav li a{
                color: white;
            }
            h1, h2{
                color: sienna;
            }
            .btn{
                padding: 0.300rem 0.375rem;
            }
            .btn-dir{
                font-size: 0.5rem;
                border-radius: 0.9rem;
                background-color: rgb(38, 159, 161);
            }
            .svg-loader{
                display: none;
                position: fixed;
                z-index: 10;
                left: 48vw;
                top: 40vh;
            }
            .loader-svg{
                /*position: fixed;
                z-index: 10;
                left: 48vw;
                top: 48vh;*/
                fill: none;
                stroke-width: 5px;
                stroke-linecap: round;
                stroke: rgb(64, 0, 148);
            }
            .loader-svg.bg{
                stroke-width: 8px;
                stroke: inherit;
                /*stroke: rgb(207, 205, 245);*/
            }
            .animate{
                stroke-dasharray: 242.6;
                animation: loading-animation 1s cubic-bezier(1,1,1,1) 0s infinite;
            }

            @keyframes loading-animation{
                0%{
                    stroke-dasharray: 40 242.6;
                    stroke-dashoffset: 282.6;
                }
                /*50%{
                    stroke-dasharray: 141.3;
                    stroke-dashoffset: 141.3;
                }*/
                100%{
                    
                    stroke-dasharray: 40 242.6;
                    stroke-dashoffset: 0;
                }
            }
            .opacity-50{
                opacity: 1;
            }
            .show{
                display: flex;
                align-content: space-around;
                justify-content: center;
            }
            body, .btn, table th, table td{
                font-size: 0.68rem;
            }
          </style>
        {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_script_tags('app') }}
        
        
