{% extends 'base.html.twig' %}

{% block title %}{{ __t('user') }} : {{ user }}{% endblock %}

{% block body %}
<h1>{{ __t('user') }} : {{ user }}</h1>
<div class="bg-dark">
    <hr>
    <hr>
</div>
<a href="{{ path('app_user_index', {_locale: app.request.locale ?? app.request.defaultLocale}) }}" class="btn btn-info">{{ __('back to list') }}</a>
<a href="{{ path('app_user_edit', {'id': user.id, _locale: app.request.locale ?? app.request.defaultLocale}) }}" class="btn btn-success">{{ __('edit') }}</a>
<hr>
<table class="table">
    <tbody>
                    <tr>
                <th>{{ __u('Id') }}</th>
                <td>{{ user.id }}</td>
            </tr>
                    <tr>
                <th>{{ __u('Pseudo') }}</th>
                <td>{{ user.pseudo }}</td>
            </tr>
                    <tr>
                <th>{{ __u('Roles') }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
                    <tr>
                <th>{{ __u('Password') }}</th>
                <td>{{ user.password }}</td>
            </tr>
                    <tr>
                <th>{{ __u('Name') }}</th>
                <td>{{ user.name }}</td>
            </tr>
            </tbody>
</table>

{{ include('user/_delete_form.html.twig') }}
{% endblock %}