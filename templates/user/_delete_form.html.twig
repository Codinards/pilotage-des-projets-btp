{% if user.id != app.user().id %}
<div class="confirm-block">
    <span class="btn btn-danger" id="confirm-block-btn">{{ __u("delete") }}</span>
    <div id="confirm-block-main" style="display: none;">
        <div class="row" style="max-width:40vw;position:fixed;top:40vh;right:40vw;z-index:20;background-color:rgb(50, 150, 100);padding:15px;border-radius:8px;box-shadow:1px 3px 1px">
            <div class="col-12 text-center">
                <h6 style="color: rgba(214, 11, 197, 0.8);">{{ appname }}</h6>
                <hr>
            </div>
            <div class="col-12 text-center text-white">{{  __u('are you sure you want to delete this user?')  }}</div>
            <div class="col-12 pt-2" style="display: flex;align-items:center;justify-content:space-around;">
                <span class="btn btn-danger" id="confirm-block-cancel" data-target="confirm-block-btn">{{ __u("Cancel") }}</span>
                <span style="width: 10px;"></span>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id, _locale: app.request.locale ?? app.request.defaultLocale}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-primary">{{ __u('Yes') }}</button>
                    </form>
            </div>
        </div>
    </div>
</div>
{% endif %}