{% extends 'base.html.twig' %}

{% block title %}{{ __u('Company index') | title }}{% endblock %}

{% block body %}
<h1>{{ __u('Company index') | title }}</h1>

<table class="table table-bordered">
    <thead class="bg-secondary">
        <tr>
                            <th>{{ __u('Id') }}</th>
                            <th>{{ __u('Name') }}</th>
                            <th>{{ __u('Address') }}</th>
                            <th>{{ __u('PhoneNumber') }}</th>
                            <th>{{ __u('Description') }}</th>
                    </tr>
    </thead>
    <tbody>
        {% for company in companies %}
        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ company.name }}</td>
                            <td>{{ company.address }}</td>
                            <td>{{ company.phoneNumber }}</td>
                            <td>{{ company.description }}</td>
                    </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}